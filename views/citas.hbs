<header>
    <h1>Centro Médico Vital Salud</h1>
</header>
<main>
    <h2>Listado de citas</h2>
    <table>
        <thead>
            <tr>
                <th>Fecha de la cita</th>
                <th>Paciente</th>
                <th>Teléfono del paciente</th>
                <th>Especialidad</th>
                <th>Consultorio</th>
                <th>Médico</th>
            </tr>
        </thead>
        <tbody>
            <!-- Se agrega el contenido dinamicamente por medio de Handlebars -->
            {{#each resultado}}
            <tr>
                <td>{{formatoFecha fecha_cita}}</td>
                <td>{{nombres}} {{apellidos}}</td>
                <td>{{telefono}}</td>
                <td>{{especialidad}}</td>
                <td>{{consultorio}}</td>
                <td>{{nombresMedico}} {{apellidosMedico}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="../index.html"><input type="button" value="Volver" class="container-bottom" /></a>
</main>
<footer class="pie-principal">
